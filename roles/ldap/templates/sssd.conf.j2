[sssd]
config_file_version = 2
services = nss, pam
domains = LDAP

[domain/LDAP]
id_provider = ldap
auth_provider = ldap
ldap_uri = ldap://{{ hostvars[groups['headnode'][0]]['ansible_host'] }}
ldap_search_base = {{ ldap_base_dn }}
ldap_id_use_start_tls = False
ldap_tls_reqcert = never
cache_credentials = True
enumerate = True